<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DatabaseActivity" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:shrinkColumns="*"
        android:stretchColumns="*" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btn_recept_ta_bild"
                android:layout_width="85dp"
                android:layout_height="70dp"
                android:textSize="12sp"
                android:background="@drawable/camera_icon"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                />
        </TableRow>
        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp" >
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:hint="Receptnamn"
                android:textColorHint="@color/color_green_logo"
                android:id="@+id/editText_recept_namn"
                />
        </TableRow>
        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp" >

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:textSize="18sp"
                android:ems="10"
                android:id="@+id/editText_recept_beskrining"
                android:hint="Beskrivning"

                />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            >

            <TextView

                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Typ"
                android:id="@+id/textView2"
                android:layout_weight="1"
                />

            <TextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Portioner"
                android:id="@+id/textView4"
                android:layout_weight="1"

                />


            <TextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Tidsåtgång"
                android:id="@+id/textView5"
                android:layout_weight="1"


                />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="5dp" >

            <EditText
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:id="@+id/editText_recept_tid"
                android:hint="t:m"
                android:textSize="12sp"
                android:layout_above="@+id/editText_recept_ingredienser"
                android:layout_column="1"/>
            <TextView/>
            <Spinner
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:id="@+id/spinner_recept_typ"
                android:textSize="10sp"
                android:layout_below="@+id/textView2"
                android:layout_column="2"/>
            <Spinner
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:id="@+id/spinner_recept_portioner"
                android:layout_centerVertical="true"
                android:layout_column="3"
                />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:stretchColumns="*">

            <Spinner
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:background="@drawable/rounded_corners_no_radius"
                android:id="@+id/amount_spinner"
                android:spinnerMode="dropdown"
                android:layout_below="@+id/editText_recept_tid"
                android:layout_column="1"
                />
            <Spinner
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:background="@drawable/rounded_corners_no_radius"
                android:id="@+id/measure_spinner"
                android:spinnerMode="dropdown"
                android:layout_column="2"/>
            <EditText
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:id="@+id/editText_recept_ingredienser"
            android:hint="Ingrediens"
            android:textSize="16sp"
            android:background="@drawable/rounded_corners_no_radius"
            android:layout_gravity="bottom"
            android:layout_below="@+id/spinner_recept_typ"
            android:layout_column="3"/>
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:id="@+id/add_ingredient_button"
                android:background="@drawable/plus_button_green"
                android:onClick="onBtnClickAddIngredient"
                android:layout_column="4"/>

        </TableRow>
            <TableRow
                android:id="@+id/tableRow7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ListView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ingredient_list"
                    android:background="@drawable/rounded_corners_no_radius"
                    />

                <!--Gör så här-->
        </TableRow>
        <TableRow
            android:id="@+id/tableRow8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/editText_recept_tillagning"
                android:text="Gör så här"
                android:textSize="14sp"
                android:background="@drawable/rounded_corners_no_radius"
                 />

<!--Button-->
        </TableRow>
        <TableRow
            android:id="@+id/tableRow9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
            android:id="@+id/btn_recept_SparaRecept"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:textSize="12sp"
            android:background="@drawable/button_save_recipe"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
        </TableRow>



    </TableLayout>

    <TextView
        android:layout_width="213dp"
        android:layout_height="wrap_content"
        android:hint="namnEtt"
        android:id="@+id/textView_hamta_Name"
        android:visibility="invisible"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="uidEtT"
        android:id="@+id/textView_hamta_Uid"
        android:visibility="invisible"
        android:layout_below="@+id/textView_hamta_Name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</LinearLayout>