<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="0dp" >

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:id="@+id/imageView3"
        android:background="@drawable/foodfaded_v1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <SearchView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners_no_radius_stroke"
        android:id="@+id/searchView"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:hint="SÃ¶k recept" />

    <ImageButton
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:id="@+id/btn_lagg_till_recept"
        android:onClick="onBtnAddRecept"
        android:background="@drawable/button_add_recepie"
        android:layout_below="@+id/searchView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_gravity="top" />

    <ImageButton
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:onClick="onBtnShowRecept"
        android:id="@+id/ShowMyRecipe"
        android:background="@drawable/button_my_recepies"
        android:layout_below="@+id/btn_lagg_till_recept"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/btn_lagg_till_recept"
        android:layout_alignStart="@+id/btn_lagg_till_recept"
        android:layout_alignRight="@+id/btn_lagg_till_recept"
        android:layout_alignEnd="@+id/btn_lagg_till_recept"
        android:layout_marginBottom="10dp"
        android:layout_gravity="top" />


</RelativeLayout>