<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Recept Namn"
        android:id="@+id/textV_mina_recept_recept_namn"
        android:layout_marginBottom="27dp"
        android:layout_above="@+id/textV_mina_recept_beskrivning"
        android:layout_alignLeft="@+id/textV_mina_recept_beskrivning"
        android:layout_alignStart="@+id/textV_mina_recept_beskrivning" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Beskrivning"
        android:id="@+id/textV_mina_recept_beskrivning"
        android:layout_above="@+id/textV_mina_recept_typ"
        android:layout_alignRight="@+id/textV_mina_recept_portioner"
        android:layout_alignEnd="@+id/textV_mina_recept_portioner"
        android:layout_marginBottom="21dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="typ"
        android:id="@+id/textV_mina_recept_typ"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textV_mina_recept_tid"
        android:layout_alignStart="@+id/textV_mina_recept_tid" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="tid"
        android:id="@+id/textV_mina_recept_tid"
        android:layout_below="@+id/textV_mina_recept_typ"
        android:layout_alignRight="@+id/textV_mina_recept_name"
        android:layout_alignEnd="@+id/textV_mina_recept_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Portioner"
        android:id="@+id/textV_mina_recept_portioner"
        android:layout_marginBottom="21dp"
        android:layout_above="@+id/textV_mina_recept_ingredienser"
        android:layout_alignLeft="@+id/textV_mina_recept_ingredienser"
        android:layout_alignStart="@+id/textV_mina_recept_ingredienser" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Gör så här"
        android:id="@+id/textV_mina_recept_tillagning"
        android:layout_below="@+id/textV_mina_recept_ingredienser"
        android:layout_alignLeft="@+id/textV_mina_recept_tid"
        android:layout_alignStart="@+id/textV_mina_recept_tid"
        android:layout_marginTop="21dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Ingredienser"
        android:id="@+id/textV_mina_recept_ingredienser"
        android:layout_below="@+id/textV_mina_recept_typ"
        android:layout_alignRight="@+id/textV_mina_recept_tillagning"
        android:layout_alignEnd="@+id/textV_mina_recept_tillagning"
        android:layout_marginTop="26dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_mina_recept"
        android:background="@color/accent_material_light"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/textV_mina_recept_recept_namn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:id="@+id/textV_mina_recept_name"
        android:visibility="visible"
        android:layout_above="@+id/textV_mina_recept_beskrivning"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp" />


</RelativeLayout>