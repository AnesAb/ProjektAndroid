<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Recept Namn"
        android:id="@+id/textV_mina_recept_recept_namn"
        android:layout_above="@+id/textV_mina_recept_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="150dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Beskrivning"
        android:id="@+id/textV_mina_recept_beskrivning"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="typ"
        android:id="@+id/textV_mina_recept_typ"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textV_mina_recept_beskrivning"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="tid"
        android:id="@+id/textV_mina_recept_tid"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textV_mina_recept_typ"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Portioner"
        android:id="@+id/textV_mina_recept_portioner"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textV_mina_recept_tid"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Gör så här"
        android:id="@+id/textV_mina_recept_tillagning"
        android:layout_below="@+id/textV_mina_recept_ingredienser"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Ingredienser"
        android:id="@+id/textV_mina_recept_ingredienser"
        android:layout_below="@+id/textV_mina_recept_portioner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:id="@+id/imageView_mina_recept"
        android:background="@drawable/food"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:id="@+id/textV_mina_recept_name"
        android:visibility="visible"
        android:layout_above="@+id/textV_mina_recept_beskrivning"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>